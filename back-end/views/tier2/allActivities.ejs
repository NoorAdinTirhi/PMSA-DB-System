    <style>
        #boxesSec {
            margin-top: 5%;
            height: 70%;
            align-items: center;
            position: relative;
        }
        
        #nationalBtn {
            float: left;
            display: inline-block;
            margin-left: 15%;
            margin-right: 10%;
            padding: 40px;
            text-align: center;
            font-size: 30px;
            border-style: solid;
            border-color: #000000;
            transition-property: box-shadow border-radius transform;
            transition-duration: .5s;
        }
        
        #natBox:hover {
            box-shadow: 2px 2px 3px 1px rgb(5, 5, 5);
            border-radius: 2%;
            transform: scale(1.01);
        }
        
        #boxesTable {
            float: right;
            margin-right: 25%;
            width: 25%;
            min-width: max-content;
            display: inline-block;
            border-collapse: collapse;
            border-style: solid;
            border-color: black;
            height: 122px;
            align-items: center;
            font-size: large;
        }
        
        #boxesTable td {
            text-align: center;
            border-style: solid;
            border-width: 2px;
            font-size: 22px;
            width: 10%;
            transition-property: box-shadow border-radius transform;
            transition-duration: .25s;
        }
        
        #boxesTable td:hover {
            box-shadow: 2px 2px 3px 1px rgb(5, 5, 5);
            border-radius: 2%;
            transform: scale(1.01);
        }
        
        #boxesTable tr {
            min-width: max-content;
            width: max-content;
            min-height: max-content;
            height: max-content;
        }
        
        #activities-table {
            float: left;
            margin-right: 10%;
            width: 25%;
            min-width: max-content;
            min-height: max-content;
            border-collapse: collapse;
            border-style: solid;
            border-color: black;
            align-items: center;
            font-size: large;
        }
        
        #activities-table td {
            border-right: 1px solid #000000;
            padding-left: 2px;
            padding-right: 2px;
        }
        
        .localbox:hover {
            box-shadow: 2px 2px 3px 1px rgb(5, 5, 5);
            border-radius: 2%;
            transform: scale(1.01);
        }
    </style>
</head>

