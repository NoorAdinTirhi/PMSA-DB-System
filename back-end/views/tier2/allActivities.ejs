            border-radius: 2%;
            transform: scale(1.01);
        }
        
        #boxesTable tr {
            min-width: max-content;
            width: max-content;
            min-height: max-content;
            height: max-content;
        }
        
        #activities-table {
            float: left;
            margin-right: 10%;
            width: 25%;
            min-width: max-content;
            min-height: max-content;
            border-collapse: collapse;
            border-style: solid;
            border-color: black;
            align-items: center;
            font-size: large;
        }
        
        #activities-table td {
            border-right: 1px solid #000000;
            padding-left: 2px;
            padding-right: 2px;
        }
        
        .localbox:hover {
            box-shadow: 2px 2px 3px 1px rgb(5, 5, 5);
            border-radius: 2%;
