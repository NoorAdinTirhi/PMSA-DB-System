        const tagList = []
        allLCs.forEach((element) =>{
            if (tagList.includes(element)){
                createTag(element)
            }else{
                removeTag(element)
            }
        })
        document.getElementsByName("participatingLCs")[0].value = ""
        

        function createTag(LC){
            LCname = LC.value;
            document.getElementsByName("participatingLCs")[0].value +=  `${LC.value},`
            console.log(document.getElementsByName("participatingLCs")[0].value)
            if (LCname != "--none--"){
                console.log("selected " + LCname)
            }
            let node = document.getElementById(`${LCname}opt`)
            if (typeof(node) != 'undefined' && node != null)
            {
                node.remove();
            }
            
            lcTag = document.createElement("div")
            lcTag.classList.add('tagContainer')
            lcTag.setAttribute('id', `${LCname}tag`)

            lcButton=document.createElement("button")
            lcButton.classList.add('tagButton')
            lcButton.setAttribute("type", "button")
            lcButton.setAttribute("value", LCname)
            lcButton.setAttribute("onClick","removeTag(this.value)")
            
            lcXimg = document.createElement("img")
            lcXimg.setAttribute("width", "10px")
            lcXimg.setAttribute("height", "10px")
            lcXimg.setAttribute("src", "../../public/images/x_transparent.jpeg")
            
            lcButton.appendChild(lcXimg)

            lclabel = document.createElement("label")
            lclabel.innerHTML = LCname[0].toUpperCase() + LCname.slice(1)

            lcTag.appendChild(lcButton)
            lcTag.appendChild(lclabel)

            document.getElementById("participatingLcs").appendChild(lcTag)
            
        }

        function removeTag(src){
            console.log(src)
            let node = document.getElementById(`${src}tag`);
            if (typeof(node) != 'undefined' && node != null)
            {
                node.remove();
            }
            let option = document.createElement("option")
            option.id = `${src}opt`
