        const tagList = String("<%=involvedLC%>").split(",")

        const allLCs = ['jerusalem', 'nablus', 'jenin', 'ppu', 'hu', 'gaza']
        
        allLCs.forEach((element) =>{
            console.log(element)
            if (tagList.includes(element)){
