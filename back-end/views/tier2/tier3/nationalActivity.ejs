        function submitSearch(form_id) {
            myForm = document.getElementById(form_id)
            const xhr = new XMLHttpRequest();
            xhr.onload = function() {
                document.body.style.cursor = "default"
                console.log(`Status: ${this.status}:: ${this.responseText}`)
